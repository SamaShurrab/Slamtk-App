<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ResultActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/result_bili"
                android:fontFamily="@font/poppins_medium_en"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_14ssp"
                android:layout_marginBottom="@dimen/_10sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/_13sdp"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:background="@drawable/stroke">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="@string/bilirate"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:fontFamily="@font/poppins_medium_en"
                    android:layout_marginTop="@dimen/_27sdp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/biliResult"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_marginEnd="@dimen/_13sdp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_semi_bold_en"
                        android:textSize="@dimen/_30ssp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mmol/L"
                        android:textColor="@color/white"
                        android:layout_marginEnd="@dimen/_13sdp"
                        android:fontFamily="@font/poppins_medium_en"
                        android:textSize="@dimen/_14ssp"
                        android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/riskType_img"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_13sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/risk_type_high"/>
            <TextView
                android:id="@+id/riskType_Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/High_risk"
                android:textColor="@color/red"
                android:fontFamily="@font/poppins_medium_en"
                android:layout_marginBottom="@dimen/_20sdp"
                android:textAlignment="center"
                android:textSize="@dimen/_16ssp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium_en"
                android:textSize="@dimen/_13ssp"
                android:layout_marginBottom="@dimen/_13sdp"
                android:layout_height="wrap_content"
                android:text="@string/Recommendations"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_13sdp"
                android:background="@drawable/recommendition_shape"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/number1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_regular_en"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:background="@drawable/number_shape"/>
                <TextView
                    android:id="@+id/recommendation1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recommendation 1"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular_en"
                    android:textColor="@color/Zambezi"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/recommendition_shape"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/number2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_regular_en"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:background="@drawable/number_shape"/>
                <TextView
                    android:id="@+id/recommendation2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recommendation 2"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular_en"
                    android:textColor="@color/Zambezi"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/recommendition_shape"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/number3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_regular_en"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:background="@drawable/number_shape"/>
                <TextView
                    android:id="@+id/recommendation3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recommendation 3"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular_en"
                    android:textColor="@color/Zambezi"/>
            </LinearLayout>

            <Button
                android:id="@+id/button_previous_examinations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/previous_examinations"
                android:layout_marginStart="@dimen/_16sdp"
                android:background="@drawable/button_previous_examinations_shape"
                android:layout_marginEnd="@dimen/_16sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:fontFamily="@font/poppins_medium_en"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
