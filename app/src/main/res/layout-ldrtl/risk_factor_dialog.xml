<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:background="@drawable/risk_factor_shape">
    <ImageView
        android:id="@+id/imageView_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:gravity="right"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:srcCompat="@drawable/close_black" />
        <TextView
            android:id="@+id/textView_riskfactor"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:fontFamily="@font/almarai_bold_ar"
            android:text="@string/risk_factor_popup"/>
        <TextView
            android:id="@+id/textView_riskfactor1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/risk_factor1"
            android:gravity="start"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"

            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/almarai_bold_ar"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />
        <TextView
            android:id="@+id/textView_riskfactor2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/risk_factor2"
            android:gravity="start"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/almarai_bold_ar"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />
        <TextView
            android:id="@+id/textView_riskfactor3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/risk_factor3"
            android:gravity="start"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/almarai_bold_ar"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/warning"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/note"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/note"
                android:textStyle="italic"
                android:layout_marginStart="@dimen/_10sdp"
                android:gravity="center"
                android:fontFamily="@font/almarai_bold_ar"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/red"
                android:layout_gravity="center"
                android:textSize="@dimen/_13ssp"/>

            <TextView
                android:id="@+id/textView_note"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:text="@string/notedescription"
                android:textAlignment="center"
                android:textStyle="italic"
                android:fontFamily="@font/almarai_bold_ar"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"/>
        </LinearLayout>
</LinearLayout>
