<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="@dimen/_13sdp"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginBottom="@dimen/_13sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/help_question_tv_shape">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sampleDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/almarai_regular_ar"
                android:textColor="@color/black"
                android:text="@string/sample_date"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sampleTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:fontFamily="@font/almarai_regular_ar"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

        </LinearLayout>
        <TextView
            android:id="@+id/bili_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bili_rate"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            android:fontFamily="@font/almarai_regular_ar"
            android:textColor="@color/Crater_Brown"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_5sdp"/>
        <TextView
            android:id="@+id/riskType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/riskType"
            android:textStyle="bold"
            android:fontFamily="@font/almarai_regular_ar"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/Crater_Brown"
            android:layout_marginStart="@dimen/_13sdp" />
        <TextView
            android:id="@+id/Recommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="@font/almarai_bold_ar"
            android:text="@string/Recommendations"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_13sdp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_13sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/_7sdp"
                android:layout_height="@dimen/_7sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:background="@drawable/circle"/>
            <TextView
                android:id="@+id/Recommendation1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/almarai_regular_ar"
                android:text="@string/Recommendations"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/Dim_Gray"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_13sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/_7sdp"
                android:layout_height="@dimen/_7sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:background="@drawable/circle"/>
            <TextView
                android:id="@+id/Recommendation2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/almarai_regular_ar"
                android:text="@string/Recommendations"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/Dim_Gray"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_13sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/_7sdp"
                android:layout_height="@dimen/_7sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:background="@drawable/circle"/>
            <TextView
                android:id="@+id/Recommendation3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/almarai_regular_ar"
                android:text="@string/Recommendations"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/Dim_Gray"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>