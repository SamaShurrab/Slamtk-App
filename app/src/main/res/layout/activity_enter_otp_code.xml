<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EnterOtpCodeActivity"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView_enter_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/otp_code" />

        <TextView
            android:id="@+id/textView_enter_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:fontFamily="@font/poppins_medium_en"
            android:gravity="center"
            android:text="@string/enter_otp"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/textView_enter_otp_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_the_code_sent_phone"
            android:textColor="@color/Echo_Blue"
            android:textSize="@dimen/_9ssp"
            android:fontFamily="@font/poppins_regular_en"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_16sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextNumber_otp6"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_48sdp"
                android:ems="1"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_box"
                android:inputType="number"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textColorHint="@color/Echo_Blue"
                android:gravity="center"
                android:textSize="@dimen/_13ssp"
                android:fontFamily="@font/poppins_regular_en"/>
            <EditText
                android:id="@+id/editTextNumber_otp5"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_48sdp"
                android:ems="1"
                android:background="@drawable/edit_text_box"
                android:inputType="number"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textColorHint="@color/Echo_Blue"
                android:gravity="center"
                android:textSize="@dimen/_13ssp"
                android:fontFamily="@font/poppins_regular_en"/>

            <EditText
                android:id="@+id/editTextNumber_otp4"
                android:layout_width="48dp"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/edit_text_box"
                android:ems="1"
                android:fontFamily="@font/poppins_regular_en"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/Echo_Blue"
                android:textSize="@dimen/_13ssp" />

            <EditText
                android:id="@+id/editTextNumber_otp3"
                android:layout_width="@dimen/_40sdp"
                android:textColorHint="@color/Echo_Blue"
                android:gravity="center"
                android:textSize="@dimen/_13ssp"
                android:fontFamily="@font/poppins_regular_en"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textColor="@color/black"
                android:ems="1"
                android:background="@drawable/edit_text_box"
                android:inputType="number" />
            <EditText
                android:id="@+id/editTextNumber_otp2"
                android:layout_width="@dimen/_40sdp"
                android:textColorHint="@color/Echo_Blue"
                android:gravity="center"
                android:textSize="@dimen/_13ssp"
                android:fontFamily="@font/poppins_regular_en"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textColor="@color/black"
                android:ems="1"
                android:background="@drawable/edit_text_box"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTextNumber_otp1"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_48sdp"
                android:background="@drawable/edit_text_box"
                android:ems="1"
                android:fontFamily="@font/poppins_regular_en"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/Echo_Blue"
                android:textSize="@dimen/_13ssp" />
        </LinearLayout>
        <Button
            android:id="@+id/button_send_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/verify_btn"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@drawable/english_shape"
            android:fontFamily="@font/poppins_medium_en"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_32sdp"
            android:visibility="visible"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textSize="@dimen/_13ssp"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:id="@+id/progressbar"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/textView_didnt_get_secert_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:fontFamily="@font/poppins_regular_en"
            android:text="@string/not_receive"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semi_bold_en"
                android:text="@string/resend_otp_link"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semi_bold_en"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>